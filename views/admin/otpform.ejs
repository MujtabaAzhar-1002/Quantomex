                <input class="input" type="text" inputmode="numeric" maxlength="1" name="digit2" required /> 
                <input class="input" type="text" inputmode="numeric" maxlength="1" name="digit3" required /> 
                <input class="input" type="text" inputmode="numeric" maxlength="1" name="digit4" required /> 
